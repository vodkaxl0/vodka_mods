from random import randint

#основная функция
def game(): 
    #количество игроков 
    n = int(input('Введите количество игроков: '))
    
    # генерируем рандомное число 
    i = randint(1, n) 
    print('У кого будет последняя бутылочка? \nПосчитайте до {}'.format(i))

    # инлайн кнопки подтверждения 
    answer = input('Введите \n1.Да \n2.Нет \n')
    if answer == '1': 
        print('Ну и ладно, я посчитал до {}.\nУ кого бутылочка?'.format(i)) 
    else: 
        print('Нет! Пора ставить бутылочку!') 

game()
