import random 

#приветствие
print('Привет! Я чат-бот ! Давай сыграем в игру в бутылочку? (да/нет)')

#считаем ответ пользователя
answer = input().lower()

#проверяем ответ пользователя
if answer == 'да':
    #задаем случайные числа для бота и игрока 
    bot_num = random.randint(1, 3)
    user_num = random.randint(1, 3)

    #сообщаем результаты
    print('Поиграем! \nЯ угадал число {}, а ты?'.format(bot_num))
    print('Введи свое число:')

    #считываем ответ пользователя
    user_num = int(input())

    #проверяем результат
    if user_num == bot_num:
        print('Ура! Ты угадал!')
    else:
        print('Нет, я загадал {}, а ты ввел {}. Следующий раз выйдет!'.format(bot_num, user_num))
        
#если игрок не хочет играть
else:
    print('Ну и ладно, пообщаемся в другой раз!')
